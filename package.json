{
  "name": "@fusionauth/mcp-tools",
  "version": "1.0.0",
  "description": "Model Context Protocol tools for FusionAuth integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "prepare": "pnpm run build",
    "start:server": "node dist/server.js",
    "example:nextjs": "cd examples/nextjs && pnpm run dev",
    "example:express": "cd examples/express && pnpm run dev",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose down && docker-compose up -d --build"
  },
  "keywords": [
    "fusionauth",
    "mcp",
    "model-context-protocol",
    "authentication",
    "typescript"
  ],
  "author": "FusionAuth",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/FusionAuth/mcp-tools"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@fusionauth/typescript-client": "^1.53.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "examples/nextjs",
    "examples/express"
  ]
}