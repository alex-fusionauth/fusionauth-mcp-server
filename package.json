{
  "name": "@fusionauth/mcp-tools",
  "version": "0.0.1",
  "description": "Tools for writing MCP clients and servers for FusionAuth",
  "keywords": [
    "fusionauth",
    "mcp",
    "model",
    "context",
    "protocol",
    "model-context-protocol",
    "authentication",
    "auth",
    "typescript"
  ],
  "homepage": "https://github.com/fusionauth/mcp-tools#readme",
  "bugs": {
    "url": "https://github.com/fusionauth/mcp-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FusionAuth/mcp-tools"
  },
  "author": "Alex Patterson (codercatdev)",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./next": {
      "import": "./dist/next/index.js",
      "types": "./dist/next/index.d.ts"
    },
    "./express": {
      "import": "./dist/express/index.js",
      "types": "./dist/express/index.d.ts"
    },
    "./stores": "./dist/stores",
    "./stores/fs": {
      "import": "./dist/stores/fs.js",
      "types": "./dist/stores/fs.d.ts"
    },
    "./stores/redis": {
      "import": "./dist/stores/redis.js",
      "types": "./dist/stores/redis.d.ts"
    },
    "./stores/postgres": {
      "import": "./dist/stores/postgres.js",
      "types": "./dist/stores/postgres.d.ts"
    },
    "./stores/sqlite": {
      "import": "./dist/stores/sqlite.js",
      "types": "./dist/stores/sqlite.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "postbuild": "mv dist/src/* dist/ && rm -rf dist/src",
    "prepublishOnly": "npm run build",
    "watch": "tsup --watch",
    "lint": "eslint src/**/*.ts",
    "prepare": "pnpm run build",
    "start:server": "node dist/server.js",
    "example:nextjs": "cd examples/nextjs && pnpm run dev",
    "example:express": "cd examples/express && pnpm run dev",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose down && docker-compose up -d --build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@fusionauth/typescript-client": "^1.53.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.4",
    "better-sqlite3": "^11.10.0",
    "next": "^15.4.4",
    "pg": "^8.16.3",
    "redis": "^5.5.6",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "better-sqlite3": "^8.7.0",
    "pg": "^8.11.0",
    "redis": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "redis": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "better-sqlite3": {
      "optional": true
    }
  },
  "tsup": {
    "entry": [
      "src/**/*.ts",
      "stores/*.ts"
    ],
    "outDir": "dist",
    "format": [
      "esm"
    ],
    "dts": true,
    "clean": true,
    "external": [
      "redis",
      "pg",
      "better-sqlite3"
    ]
  },
  "workspaces": [
    "examples/nextjs",
    "examples/express"
  ]
}